<%- include('partials/header'); -%>

        <form id="preference" style="cursor: pointer;" data-user="<%= user._id %>">
                <h2>
                        <%= user.pickup %>
                </h2>
                <div class="form_foot">
                        <p>When you 🚫 to ♻️,
                                it's the 🌏 you 💩</p>
                </div>
        </form>

        <script>
                form = document.getElementById("preference");

                form.addEventListener("click", (e) => {
                        const url = `/pickup/${form.dataset.user}`

                        console.log(url)

                        fetch(url, {
                                method: "POST",
                        })
                                .then(res => res.json())
                                .then(data => {
                                        console.log(data)
                                        window.location.assign("/pickup")
                                })
                })
        </script>